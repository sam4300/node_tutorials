<html lang="en">
<%- include('./partials/head.ejs')%>

    <body>

        <%- include('./partials/nav.ejs') %>

            <div class="blogs-contnet">
                <h2>All Blogs</h2>
                <% if(blogs.length>0){%>
                    <% blogs.forEach(blog=>{%>
                        <h3>
                            <%= blog.title %>
                        </h3>
